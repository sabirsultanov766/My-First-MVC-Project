@model GameProduct;

<div class="card-body">
    <h4 class="card-title">Default form</h4>
    <p class="card-description"> Basic form layout </p>
    <form asp-action="Update" class="forms-sample">
        <div class="form-group">
            <label for="exampleInputUsername1">Name</label>
            <input asp-for="Name" type="text" value="@Model.Name" class="form-control" id="exampleInputUsername1" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Genre</label>
            <input asp-for="Genre" type="text" value="@Model.Genre" class="form-control" id="exampleInputUsername1" placeholder="Genre" />
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Price</label>
            <input asp-for="Price" type="number" value="@Model.Price" class="form-control" id="exampleInputUsername1" placeholder="Username">
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">ImgUrl</label>
            <input asp-for="ImgUrl" type="text" value="@Model.ImgUrl" class="form-control" id="exampleInputUsername1" placeholder="Username">
        </div>


        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button class="btn btn-dark">Cancel</button>
    </form>
</div>