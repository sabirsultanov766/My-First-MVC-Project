@model List<GameProduct>;


<div class="container py-5">
    
    <div class="card shadow-lg p-4">
        <div class="card-body">
            <h4 class="card-title mb-3">Inverse Table</h4>
            <div class="table-responsive">
                <table class="table table-dark table-striped">

                    <thead>
                        <a asp-asp-area="Admin" asp-controller="Services" asp-action="Create">Create NeW Product</a>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Genre</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if(Model is not null)
                            {
                            
                            foreach(GameProduct product in Model)
                            {<tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>$@product.Price</td>
                <td>@product.Genre</td>
                <td>
                    <img src="~/admins/assets/images/@product.ImgUrl"  />
                </td>
                <td>
                        <form asp-action="Delete" asp-controller="Services" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger btn-rounded btn-fw" >
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
                            }
                            }
                            
                        }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    
